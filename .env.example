# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_bot_token_here

# Application Settings
NODE_ENV=production
PORT=3000

# Cron Job Settings
# Time for daily tasks broadcast (format: "hour minute", 24-hour format)
DAILY_BROADCAST_HOUR=7
DAILY_BROADCAST_MINUTE=0

# Timezone for cron jobs (WEST - Western European Summer Time)
TZ=Europe/Lisbon

# Database Settings
# Path to the JSON database file
DB_PATH=./data/db.json

# Logging Settings
LOG_LEVEL=info

# For testing: set to true to enable test broadcast every minute
# ENABLE_TEST_CRON=false

# Production Settings
# Maximum retries for failed Telegram messages
MAX_TELEGRAM_RETRIES=3

# Delay between retries (in milliseconds)
RETRY_DELAY=1000

# Maximum number of subscribers to process in one batch
MAX_BATCH_SIZE=100